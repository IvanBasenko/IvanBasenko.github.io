header
  background mainColor url(../img/general/headerbg.jpg) center no-repeat
  height: 70px
  color #FFFFFF
  .container
    display flex
    justify-content space-between
    align-items center
    height: 70px
    padding: 15px 0
.header-logo
  position: relative
  top: 35px
  z-index: 1


.header-about
  span
    display block
    font-size 16px


.header-company__name
  margin-bottom: 5px
  font-family boldFont
  font-weight 700
  text-transform uppercase
  font-size 16px



.header-phone
  position: relative
  padding-left: 35px

  &:before
    content ''
    position absolute
    left: 0
    top: 50%
    margin-top: -12px
    display block
    width: 25px
    height: 25px
    background url("../img/svg/phone-receiver.svg") 0 0 no-repeat
    background-size 100%
  a
    color #FFFFFF
    display: block
    font-size 20px
    font-weight 700

    &:first-child
      margin-bottom: 5px