.header-nav__list
  position: absolute
  top: 80px
  left: 0
  z-index 1
  display none

.header-nav__link
  display block
  color mainColor
  padding: 15px 15px 15px 20px
  border-bottom 1px solid mainColor
  transition all linear .2s
  background-color #FFFFFF


  &:hover
    background-color mainColor
    color #FFFFFF
